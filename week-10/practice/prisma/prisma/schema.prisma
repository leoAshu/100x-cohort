// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  Int @id @default(autoincrement())
  email String @unique
  firstName String
  lastName String
  password String
}

model Todo {
  id  Int @id @default(autoincrement())
  title String
  done Boolean @default(false)
  description String
  userId Int
}